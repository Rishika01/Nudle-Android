<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".ProfilePageActivity"

    >

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/profile_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#253a4b"
        android:outlineAmbientShadowColor="#000000"
        android:outlineSpotShadowColor="#000000"
        android:src="@drawable/back_profile" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_profile_pic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:src="@color/default_user_icon_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_profile_pic"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/profile_shopping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:drawableStart="@drawable/back_shopping"
            android:drawablePadding="20dp"
            android:text="Go Shopping"
            android:textColor="#253a4b"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/profile_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:drawableStart="@drawable/cart"
            android:drawablePadding="20dp"
            android:text="My Cart"
            android:textColor="#253a4b"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/profile_points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:drawableStart="@drawable/points"
            android:drawablePadding="20dp"
            android:text="Points"
            android:textColor="#253a4b"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/profile_gifts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:drawableStart="@drawable/gitfs"
            android:drawablePadding="20dp"
            android:text="Gift"
            android:textColor="#253a4b"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/profile_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:drawableStart="@drawable/location"
            android:drawablePadding="20dp"
            android:text="Address"
            android:textColor="#253a4b"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/profile_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.7"
            android:drawablePadding="20dp"
            android:gravity="center"
            android:text="Logout"
            android:textColor="#253a4b"
            android:textSize="20dp" />


    </LinearLayout>

</RelativeLayout>